{
  "compilerOptions": {
    "target": "es2015",
    "module": "amd",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "js",
    
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}